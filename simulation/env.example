# Simulation Server Configuration
PORT=3001
NODE_ENV=development

# Physics Configuration
PHYSICS_TIMESTEP=0.016
PHYSICS_MAX_SUBSTEPS=10
ENABLE_CONTACT_CALLBACKS=true
ENABLE_COLLISION_FILTERING=true
ENABLE_PHYSICS_PERFORMANCE=true

# Simulation Performance
MAX_FPS=60
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_RECOVERY=true
MAX_CONSECUTIVE_ERRORS=5

# Camera Rendering
RENDER_WIDTH=224
RENDER_HEIGHT=224
ENABLE_SHADOWS=true
ENABLE_POST_PROCESSING=true
CAMERA_NOISE_LEVEL=0.02

# Environment Configuration
WORLD_SIZE=100
MAX_PLANTS=100
PLANT_COUNT=50
WEATHER_ENABLED=true
GROWTH_ENABLED=true
DISEASE_ENABLED=true

# Drone Configuration
DRONE_MASS=1.5
DRONE_MAX_THRUST=25.0
DRONE_MAX_ANGULAR_VELOCITY=5.0
DRONE_DRAG_COEFFICIENT=0.1
DRONE_BATTERY_CAPACITY=100
DRONE_BATTERY_DRAIN_RATE=0.5
DRONE_MOTOR_RESPONSE_TIME=0.1

# PID Controller Gains
DRONE_PID_PITCH_P=2.0
DRONE_PID_PITCH_I=0.1
DRONE_PID_PITCH_D=0.5
DRONE_PID_ROLL_P=2.0
DRONE_PID_ROLL_I=0.1
DRONE_PID_ROLL_D=0.5
DRONE_PID_YAW_P=1.5
DRONE_PID_YAW_I=0.05
DRONE_PID_YAW_D=0.3
DRONE_PID_ALTITUDE_P=1.0
DRONE_PID_ALTITUDE_I=0.05
DRONE_PID_ALTITUDE_D=0.2

# Python Backend Configuration
PYTHON_BACKEND_URL=ws://localhost:8000/ws
PYTHON_BACKEND_TIMEOUT=5000
PYTHON_BACKEND_RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=true

# Testing Configuration
TEST_TIMEOUT=10000
TEST_HEADLESS=true
ENABLE_TEST_LOGGING=false 